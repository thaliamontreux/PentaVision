[Unit]
Description=PentaVision Web UI
After=network.target

[Service]
User=pentavision
Group=pentavision
WorkingDirectory=/opt/pentavision/app
Environment="PATH=/opt/pentavision/venv/bin:/usr/bin:/bin"
Environment="PYTHONPATH=/opt/pentavision/app"
EnvironmentFile=/opt/pentavision/app/.env
ExecStart=/opt/pentavision/venv/bin/gunicorn --chdir /opt/pentavision/app wsgi:application --bind 0.0.0.0:8080 --workers 2 --threads 4
Restart=on-failure

[Install]
WantedBy=multi-user.target
